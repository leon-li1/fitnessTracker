datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Exercise {
  id        Int     @id @default(autoincrement())
  name      String
  weight    Int
  reps      Int
  workout   Workout @relation(fields: [workoutId], references: [id])
  workoutId Int
}

model Workout {
  id        Int        @id @default(autoincrement())
  exercises Exercise[]
  startedAt DateTime
  endedAt   DateTime?
  completed Boolean    @default(false)
  owner     User       @relation(fields: [ownerId], references: [id])
  ownerId   Int
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  workouts Workout[]
}
